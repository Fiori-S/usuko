{
  "name": "site",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "frontend": "cd frontend && npm run serve",
    "backend": "cd backend && npm run start:dev",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run --silent start:dev",
    "start:dev": "concurrently --kill-others -n 'frontend,backend' -c 'blue,red' \"npm run frontend\" \"npm run backend\""
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "ejs": "~2.6.1",
    "express": "~4.16.1",
    "express-session": "^1.17.1",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "if-env": "^1.0.4"
  }
}
